<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.mcfm">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Dialog.TimePickerDialog"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Dialog" />
        <activity
            android:name=".Dialog.DatePickerDialog"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.Dialog" />
        <activity
            android:name=".Dialog.WriteDeleteDialog"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.Dialog" />
        <activity
            android:name=".Function.WriteActivity"
            android:parentActivityName=".Main.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Function.WriteModifyActivity"
            android:parentActivityName=".Main.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ChatActivity.ChatActivity"/>
        <activity android:name=".Dialog.First_Recycler_Item_Click_Dialog"
            android:theme="@style/Theme.AppCompat.Dialog"
            />
        <activity android:name=".Dialog.First_Recycler_Item_Click_confirm_Dialog"
            android:theme="@style/Theme.AppCompat.Dialog"
            />
    </application>
</manifest>