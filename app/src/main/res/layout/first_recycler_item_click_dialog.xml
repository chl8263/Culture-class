<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_WHITE"
    android:orientation="vertical"

    android:layout_width="300dp"
    android:layout_height="400dp">
    <LinearLayout
        android:layout_weight="3.5"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <ImageView
            android:layout_margin="8dp"
            android:layout_weight="5"
            app:srcCompat="@drawable/first_recycler_item_image"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
        <TextView
            android:text="asdasd"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/color_Black"
            android:layout_weight="2"
            android:id="@+id/first_RecyclerView_item_Click_dialog_Name"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_Lite_Gray"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="12dp"
            android:gravity="center|left"
            android:textSize="20sp"
            android:textColor="@color/color_Black"
            android:text="희망 멘토링"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
        <TextView
            android:id="@+id/click_dialog_metoType"
            android:layout_marginRight="12dp"
            android:gravity="center|left"
            android:textSize="20sp"
            android:textColor="@color/color_Black"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
        <TextView
            android:text="지역"
            android:layout_marginLeft="12dp"
            android:gravity="center|left"
            android:textSize="20sp"
            android:textColor="@color/color_Black"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />

        <TextView
            android:id="@+id/click_dialog_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_weight="1" />

        <TextView
            android:text="소개"
            android:layout_marginLeft="12dp"
            android:gravity="center|left"
            android:textSize="20sp"
            android:textColor="@color/color_Black"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
        <TextView
            android:id="@+id/click_dialog_introduce"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />


    </LinearLayout>

    <LinearLayout
        android:background="@color/color_WHITE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first_RecyclerView_item_Click_dialog_OK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MATCHING"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_Gray" />

        <TextView
            android:id="@+id/first_RecyclerView_item_Click_dialog_CANCEL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CANCEL"
            android:textColor="@color/color_Black"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>