<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/color_Main"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <TextView
            android:textColor="@color/color_Black"
            android:textSize="16dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="매칭"
            android:gravity="left|center"
            android:id="@+id/main_activity_setTitle"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
        <TextView
            android:textColor="@color/color_Gray"
            android:textSize="16dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="MCFM"
            android:gravity="right|center"
            android:id="@+id/main_activity_setAppName"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
        </LinearLayout>
    <android.support.design.widget.TabLayout
        app:tabIndicatorColor="@color/color_Black"
        app:tabBackground="@color/color_WHITE"
        app:tabIndicatorHeight="@dimen/cardview_default_elevation"
        android:layout_weight="5"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>